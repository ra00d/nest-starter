{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "generateOptions": {
    "spec": false
  },
  "compilerOptions": {
    "manualRestart": true,
    "deleteOutDir": true,
    "watchAssets": true,
    "assets": [
      {
        "include": "i18n/**/*",
        "watchAssets": true
      },
      { "include": "**/*.hbs", "watchAssets": true }
    ]
  }
}
